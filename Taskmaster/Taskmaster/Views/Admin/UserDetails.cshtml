@model Taskmaster.ViewModels.UserViewModel

@{
    ViewData["Title"] = "User Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Users</h1>

<div class="row mt">
    <div class="col-md-12">
        <div class="content-panel">
            <h4 style="text-align: center">User Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    Account Status
                </dt>
                <dd class="col-sm-10">
                    @if (Model.Active)
                    {
                        <span>Activated</span>
                    }
                    else
                    {
                        <span>Deactivated</span>
                    }
                </dd>
                <dt class="col-sm-2">
                    Access Level
                </dt>
                <dd class="col-sm-10">
                    @if (Model.Administrator)
                    {
                        @if (Model.Permanent)
                        {
                            <span>Root</span>
                        }
                        else
                        {
                            <span>Administrator</span>
                        }
                    }
                    else
                    {
                        <span>User</span>
                    }
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Postcode)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Postcode)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Phone)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Phone)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2">
                    Skills
                </dt>
                <dd class="col-sm-10">
                    @foreach (var category in Model.Categories)
                    {
                        <strong>@Html.DisplayFor(model => category.Name)</strong>
                        <ul>
                            @foreach (var skill in category.Skills)
                            {
                                <li>
                                    @Html.DisplayFor(model => skill.Name)
                                </li>
                            }
                        </ul>
                    }
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PublicProfile)
                </dt>
                <dd class="col-sm-10">
                    @if (Model.PublicProfile)
                    {
                        <span>Yes</span>
                    }
                    else
                    {
                        <span>No</span>
                    }
                </dd>
            </dl>
            <form>
                <button class="btn btn-secondary btn-xs" asp-controller="Admin" asp-action="Users" title="Return to User Management">Return to User Management</button>
            </form>
        </div>
    </div>
</div>