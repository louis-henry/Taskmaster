<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Taskmaster</title>
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site-home.css" />
    <link href="https://fonts.googleapis.com/css2?family=Lato&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://use.typekit.net/wyt4blk.css">

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/search-drop.js"></script>
</head>
<body>
    <!--HEADER-->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3">
            
                <a id="logo" asp-area="" asp-controller="Home" asp-action="Index"><img src="@Url.Content("~/images/taskmaster-logo-only.png")" width="120" alt="TaskMaster logo"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link-text" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link-text" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link-text" asp-area="" asp-controller="Home" asp-action="ContactUS">Contact Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link-text" asp-area="" asp-controller="Search" asp-action="Index">Search</a>
                        </li>
                    </ul>
                </div>
            
        </nav>

    </header>
    <!--MAIN-->
    <div class="container-default">
        @RenderBody()
    </div>

    <!--FOOTER-->
    <footer id="footer_main">
        <div class="footer">
            <div class="footer-logo">
                <div class="logo_container">
                    <img src="@Url.Content("~/images/taskmaster-text-only.png")">
                </div>

                <div class="footer_section">
                    <h1>Discover</h1>
                    <a asp-area="" asp-controller="Footer" asp-action="How">How it works</a>
                    <a asp-area="" asp-controller="Footer" asp-action="Business">Business</a>
                    <a asp-area="" asp-controller="Footer" asp-action="FAQ">FAQ</a>
                </div>

                <div class="footer_section">
                    <h1>Company</h1>
                    <a asp-area="" asp-controller="Home" asp-action="About">About us</a>
                    <a asp-area="" asp-controller="Footer" asp-action="Guidelines">Guidelines</a>
                    <a asp-area="" asp-controller="Footer" asp-action="Terms">Terms and Conditions</a>
                    <a asp-area="" asp-controller="Home" asp-action="ContactUs">Contact us</a>
                    <a asp-area="" asp-controller="Footer" asp-action="Privacy">Privacy Policy</a>
                </div>

                <div class="footer_section">
                    <h1>Members</h1>
                    <a asp-area="" asp-controller="Secure" asp-action="Login">Login</a>
                    <a asp-area="" asp-controller="Account" asp-action="AddTask">Add a task</a>
                    <a asp-area="" asp-controller="Account" asp-action="Tasks">Browse my tasks</a>
                </div>

                <div class="footer_section">
                    <h1>Follow Us</h1>
                    <li><a href="https://www.facebook.com/"><i class="fab fa-facebook"> Facebook</i></a></li>
                    <li><a href="https://www.instagram.com/"><i class="fab fa-instagram"> Instagram</i></a></li>
                    <li><a href="https://www.linkedin.com/"><i class="fab fa-linkedin"> LinkedIn</i></a></li>
                    <li><a href="https://www.youtube.com/"><i class="fab fa-youtube"> YouTube</i></a></li>
                </div>

                <div class="footer_section">
                    <h1>About</h1>
                    <p>
                        Group 2
                        C/o Royal Melbourne Institute of Technology<br>
                        Programming Project 1<br>
                        124 La Trobe St,<br>
                        Melbourne VIC 3000<br>
                    </p>
                </div>
            </div>
        </div>
    </footer>
    
    @RenderSection("Scripts", required: false)
</body>
</html>